<?xml version="1.0"?>
<template format="4"
        revision="1"
        name="Trendyol Mapper Template"
        description="Create Trendyol Mapper class">

    <category value="Trendyol"/>

    <parameter
        id="className"
        type="string"
        constraints="nonempty|class|unique"
        default="Mapper"
        name="Mapper class name" />

    <parameter
        id="source1"
        type="string"
        constraints="nonempty|class|unique"
        name="Source class name" />

    <parameter
        id="addDataSource2"
        name="Is add new data source?"
        type="boolean"
        default="false"
        help="Add data source for mapper" />

    <parameter
        id="source2"
        type="string"
        constraints="nonempty|class|unique"
        visibility="addDataSource2"
        name="Source class name 2" />

    <parameter
        id="addDataSource3"
        name="Is add new data source?"
        type="boolean"
        default="false"
        visibility="addDataSource2"
        help="Add data source for mapper" />

    <parameter
        id="source3"
        type="string"
        constraints="nonempty|class|unique"
        visibility="addDataSource3"
        name="Source class name 3" />

    <parameter
        id="addDataSource4"
        name="Is add new data source?"
        type="boolean"
        default="false"
        visibility="addDataSource3"
        help="Add data source for mapper" />

    <parameter
        id="source4"
        type="string"
        constraints="nonempty|class|unique"
        visibility="addDataSource4"
        name="Source class name 4" />

    <parameter
        id="target"
        type="string"
        constraints="nonempty|class|unique"
        suggest="${extractLetters(source1)}"
        name="Target class name" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
